<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding"
    android:background="@drawable/clickable_background">

    <TextView
        android:id="@+id/text_view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="用户名"/>

    <TextView
        android:id="@+id/text_view_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chinese_dash"
        android:textSize="@dimen/text_size_primary"
        android:textColor="@color/black_normal"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/text_view_username"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_primary"
        android:textColor="@color/black_normal"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/text_view_dash"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1个小时前"/>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_bold"
        android:textSize="@dimen/text_size_home_article_title"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_username"
        tools:text="@string/sample_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>